<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    tools:context=".MainActivity6">

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="19dp"
      android:text="@string/product_name_label"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@+id/editTextText3"
      app:layout_constraintTop_toBottomOf="@+id/imageView4" />

  <EditText
      android:id="@+id/editTextText3"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="35dp"
      android:layout_marginEnd="60dp"
      android:layout_marginBottom="35dp"
      android:autofillHints="product name"
      android:background="@drawable/shape"
      android:ems="10"
      android:hint="@string/product_description_label"
      android:inputType="text"
      android:padding="10dp"
      android:text="@string/product_name"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/imageView9"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textView6"
      tools:ignore="VisualLintTextFieldSize" />

  <ImageButton
      android:id="@+id/imageButton2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:contentDescription="@string/back_icono"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back_icon"
      tools:ignore="ImageContrastCheck" />

  <Button
      android:id="@+id/button6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="3dp"
      android:layout_marginTop="15dp"
      android:text="@string/buton_save"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="@string/or"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="@+id/buttonSelectImage"
      app:layout_constraintStart_toEndOf="@+id/buttonSelectImage" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="3dp"
      android:layout_marginBottom="20dp"
      android:text="@string/product_description_label"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
      app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="34dp"
      android:contentDescription="@string/user_icono"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@drawable/user_icon" />

  <ImageView
      android:id="@+id/imageView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="21dp"
      android:contentDescription="@string/button_image"
      app:layout_constraintBottom_toBottomOf="@+id/textView8"
      app:layout_constraintStart_toEndOf="@+id/textView8"
      app:srcCompat="@drawable/camera"
      tools:ignore="ImageContrastCheck" />

  <EditText
      android:id="@+id/editTextTextMultiLine"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="56dp"
      android:layout_marginEnd="56dp"
      android:layout_marginBottom="21dp"
      android:autofillHints="Description"
      android:background="@drawable/shape"
      android:ems="10"
      android:gravity="start|top"
      android:hint="@string/product_description_label"
      android:inputType="textMultiLine"
      android:padding="10dp"
      android:text="@string/product_description"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/imageView10"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="VisualLintTextFieldSize,VisualLintLongText" />

  <Button
      android:id="@+id/buttonSelectImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="22dp"
      android:text="@string/button_image"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/textView7"
      app:layout_constraintStart_toStartOf="@+id/textView7"
      tools:ignore="DuplicateSpeakableTextCheck" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="4dp"
      android:contentDescription="@string/button_delete_description"
      app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
      app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
      app:srcCompat="@drawable/delete_icono" />

  <ImageView
      android:id="@+id/imageView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginEnd="49dp"
      android:layout_marginBottom="93dp"
      android:contentDescription="@string/button_delete_description"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/button6"
      app:srcCompat="@drawable/delete_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>